model Meal {
    id          String      @id @default(uuid())
    title       String
    description String
    price       Float
    image       String
    isAvailable Boolean     @default(true)
    ratingAvg   Float       @default(0)
    ratingCount Int         @default(0)
    createdAt   DateTime    @default(now())
    updatedAt   DateTime    @updatedAt
    reviews     Review[]
    orderItems  OrderItem[]
    cartItems   CartItem[]
}
