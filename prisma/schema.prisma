generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model ProviderProfile {
  id          String                  @id @default(uuid())
  userId      String
  restaurant  String
  description String?
  logoUrl     String?
  address     String
  isOpen      ProviderRestaurantStats @default(OPEN)
  createAt    DateTime                @default(now())
  updatedAt   DateTime                @updatedAt
}

model Category {
  id        String   @id @default(uuid())
  name      String
  slug      String?
  image     String
  createdAt DateTime @default(now())
}

model Meal {
  id          String      @id @default(uuid())
  title       String
  description String
  price       Float
  image       String
  isAvailable Boolean     @default(true)
  ratingAvg   Float       @default(0)
  ratingCount Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  reviews     Review[]
  orderItems  OrderItem[]
  cartItems   CartItem[]
}

model Order {
  id            String      @id @default(uuid())
  userId        String
  status        OrderStatus @default(PREPARING)
  totalAmount   Float
  paymentMethod String      @default("COD")
  deliveryNote  String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  orderItems    OrderItem[]
  reviews       Review[]
}

model OrderItem {
  id       String @id @default(uuid())
  mealId   String
  meal     Meal   @relation(fields: [mealId], references: [id], onDelete: Cascade)
  orderId  String
  order    Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  price    Float
  quantity Int
}

model Review {
  id        String   @id @default(uuid())
  userId    String
  mealId    String
  meal      Meal     @relation(fields: [mealId], references: [id], onDelete: Cascade)
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  comment   String
  rating    Int
  createdAt DateTime @default(now())
}

model Cart {
  id        String     @id @default(uuid())
  userId    String
  updatedAt DateTime   @updatedAt
  cartItems CartItem[]
}

model CartItem {
  id       String @id @default(uuid())
  cartId   String
  cart     Cart   @relation(fields: [cartId], references: [id], onDelete: Cascade)
  mealId   String
  meal     Meal   @relation(fields: [mealId], references: [id], onDelete: Cascade)
  quantity Int
}

model Address {
  id        String   @id @default(uuid())
  userId    String
  label     String
  street    String
  city      String
  area      String?
  phone     String
  createdAt DateTime @default(now())
}

enum OrderStatus {
  PREPARING
  READY
  DELIVERED
}

enum ProviderRestaurantStats {
  OPEN
  CLOSED
}
