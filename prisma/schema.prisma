generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model ProviderProfile {
  id          String                  @id @default(uuid())
  userId      String
  restaurant  String
  description String?
  logoUrl     String?
  address     String
  isOpen      ProviderRestaurantStats @default(OPEN)
  createAt    DateTime                @default(now())
  updatedAt   DateTime                @updatedAt
}

enum ProviderRestaurantStats {
  OPEN
  CLOSED
}
