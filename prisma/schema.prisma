generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model ProviderProfile {
  id          String                  @id @default(uuid())
  userId      String
  restaurant  String
  description String?
  logoUrl     String?
  address     String
  isOpen      ProviderRestaurantStats @default(OPEN)
  createAt    DateTime                @default(now())
  updatedAt   DateTime                @updatedAt
}

model Category {
  id        String   @id @default(uuid())
  name      String
  slug      String
  image     String
  createdAt DateTime @default(now())
}

model Meal {
  id          String   @id @default(uuid())
  title       String
  description String
  price       Float
  image       String
  isAvailable Boolean  @default(true)
  ratingAvg   Float    @default(0)
  ratingCount Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id            String      @id @default(uuid())
  userId        String
  stats         OrderStatus @default(PREPARING)
  totalAmount   Float
  paymentMethod String      @default("COD")
  deliveryNote  String?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model Review {
  id String @id @default(uuid())
  userId String
  mealId String
  orderId String
  comment String
  rating Int
  createdAt DateTime @default(now())
}

enum OrderStatus {
  PREPARING
  READY
  DELIVERED
}

enum ProviderRestaurantStats {
  OPEN
  CLOSED
}
